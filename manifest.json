{
  "manifest_version": 3,
  "name": "GOST Citation Generator (Consultant.ru)",
  "version": "1.0",
  "description": "Generates a GOST-compliant citation for a Consultant.ru document.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.consultant.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
